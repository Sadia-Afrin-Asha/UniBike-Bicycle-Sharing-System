<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.unibike_version_4.controller.UserController"
            stylesheets="@user.css">

   <!-- Top Section: Balance and Messages -->
   <top>
      <HBox alignment="CENTER_LEFT" spacing="20">
         <padding>
            <Insets bottom="15" left="20" right="20" top="15" />
         </padding>
         <Label fx:id="balanceLabel" text="Balance: 0 units" />
         <Label fx:id="messageLabel" text="" />
      </HBox>
   </top>

   <!-- Center Section: Tables -->
   <center>
      <VBox spacing="15">
         <padding>
            <Insets bottom="10" left="20" right="20" top="10" />
         </padding>

         <!-- Available Bikes Table -->
         <Label styleClass="table-header-label" text="Available Bicycles" />
         <TableView fx:id="availableBikesTable" prefHeight="200">
            <columns>
               <TableColumn fx:id="bikeIdColumn" text="Bike ID" prefWidth="120"/>
               <TableColumn fx:id="stationColumn" text="Station" prefWidth="200"/>
            </columns>
         </TableView>

         <!-- Reserved Bikes Table -->
         <Label styleClass="table-header-label" text="My Reserved Bicycles" />
         <TableView fx:id="reservedBikesTable" prefHeight="200">
            <columns>
               <TableColumn fx:id="reservedBikeIdColumn" text="Bike ID" prefWidth="120"/>
               <TableColumn fx:id="reservedStationColumn" text="Station" prefWidth="200"/>
            </columns>
         </TableView>
      </VBox>
   </center>

   <!-- Bottom Section: Buttons -->
   <bottom>
      <HBox alignment="CENTER" spacing="10">
         <padding>
            <Insets bottom="20" left="10" right="10" top="10" />
         </padding>
         <Button onAction="#handleReserveBike" styleClass="button-primary" text="Reserve Bike" />
         <Button onAction="#handleReturnBike" styleClass="button-secondary" text="Return Bike" />
         <Button onAction="#handleViewHistory" styleClass="button-secondary" text="View History" />
         <Button onAction="#handleViewBalance" styleClass="button-secondary" text="View Balance" />
         <Button onAction="#handleAddBalance" styleClass="button-secondary" text="Add Balance" />
         <Button onAction="#handleLogout" styleClass="button-danger" text="Logout" />
      </HBox>
   </bottom>

</BorderPane>
