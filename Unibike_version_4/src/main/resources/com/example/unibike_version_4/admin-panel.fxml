<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17"
            fx:controller="com.example.unibike_version_4.controller.AdminPanelController"
            prefHeight="700" prefWidth="1000"
            stylesheets="@admin.css">

    <top>
        <BorderPane styleClass="top-header">
            <left>
                <Label styleClass="header-title" text="Admin Panel - Manage Users, Stations &amp; Bicycles" />
            </left>
            <right>
                <Button onAction="#handleLogout" styleClass="button-danger" text="Logout" />
            </right>
        </BorderPane>
    </top>

    <center>
        <VBox alignment="TOP_CENTER" spacing="10">
            <padding>
                <Insets bottom="10" left="20" right="20" top="20" />
            </padding>
            <Label styleClass="section-header" text="All Users" />
            <TableView fx:id="userTable" prefHeight="200" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="userIdColumn" text="User ID" prefWidth="150"/>
                    <TableColumn fx:id="usernameColumn" text="Username" prefWidth="200"/>
                    <TableColumn fx:id="emailColumn" text="Email" prefWidth="250"/>
                    <TableColumn fx:id="balanceColumn" text="Balance" prefWidth="150"/>
                </columns>
            </TableView>
            <Label styleClass="section-header" text="All Bicycles" />
            <TableView fx:id="bicycleTable" prefHeight="200" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="idColumn" text="Bicycle ID" prefWidth="150"/>
                    <TableColumn fx:id="stationColumn" text="Station" prefWidth="250"/>
                    <TableColumn fx:id="availableColumn" text="Available" prefWidth="100"/>
                </columns>
            </TableView>
            <Label fx:id="messageLabel" />
        </VBox>
    </center>

    <bottom>
        <VBox styleClass="control-panel" spacing="15" alignment="CENTER">
            <HBox alignment="CENTER" spacing="10">
                <Label text="Station Name:" />
                <TextField fx:id="stationNameField" promptText="e.g. Civil Station" />
                <Label text="Capacity:" />
                <TextField fx:id="stationCapacityField" promptText="Default 10" prefWidth="100"/>
                <Button onAction="#handleAddStation" styleClass="button-primary" text="Add Station" />
            </HBox>
            <Separator/>
            <HBox alignment="CENTER" spacing="10">
                <Label text="Bicycle ID:" />
                <TextField fx:id="bicycleIdField" promptText="e.g. B001" />
                <Label text="Station:" />
                <ComboBox fx:id="stationComboBox" prefWidth="170" promptText="Select Station" />
                <Label text="Available:" />
                <CheckBox fx:id="availableCheck" />
                <Button onAction="#handleAddBicycle" styleClass="button-primary" text="Add Bicycle" />
            </HBox>
            <Separator/>
            <HBox alignment="CENTER" spacing="15">
                <Button onAction="#handleMarkAvailable" text="Mark as Available" />
                <Button onAction="#handleMarkUnavailable" text="Mark as Unavailable" />
                <Button onAction="#handleDeleteBicycle" styleClass="button-danger" text="Delete Bicycle" />
            </HBox>
        </VBox>
    </bottom>
</BorderPane>