<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.unibike_version_4.controller.SignupController"
            prefWidth="400" prefHeight="500"
            stylesheets="@signup.css">

    <children>
        <VBox alignment="CENTER" spacing="15.0" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
            <padding>
                <Insets top="20" right="20" bottom="20" left="20"/>
            </padding>

            <Label text="Create Account" styleClass="header-text"/>

            <TextField fx:id="usernameField" promptText="Username" maxWidth="250"/>

            <TextField fx:id="emailField" promptText="Email" maxWidth="250"/>

            <PasswordField fx:id="passwordField" promptText="Password" maxWidth="250"/>

            <PasswordField fx:id="confirmPasswordField" promptText="Confirm Password" maxWidth="250"/>

            <Button text="Sign Up" onAction="#handleSignup" maxWidth="150" styleClass="signup-button"/>

            <Button text="Back to Login" onAction="#handleBackToLogin" maxWidth="150" styleClass="back-button"/>

            <Label fx:id="messageLabel" managed="false" visible="false" wrapText="true" maxWidth="250" />

        </VBox>
    </children>
</AnchorPane>